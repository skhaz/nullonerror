{% extends "layout.template" %}

{% block title %}{{ entry.title }} - {{ blog.name }}{% endblock %}

{% block header %}
<link rel="stylesheet" href="/static/css/tomorrow.css" />
{% endblock %}

{% block content %}
  <div class="title">
    <h4>{{ entry.title }}</h2>
  </div>
  <p>{{ entry.content }}</p>
  <div>
      <!-- <span class="">Posted {{ entry.published.strftime('%B %d, %Y') }}</span> -->
    <div class="pull-right">
    {% for tag in entry.tags %}
    <a href="/tag/{{ tag }}">#{{ tag }}</span></a>
    {% endfor %}
    </div>
  </div>

  <hr>

  <div id="disqus_thread"></div>
{% endblock %}

{% block ready %}

$.ajax({
  type: "GET",
  url: '//cdnjs.cloudflare.com/ajax/libs/prettify/r298/prettify.js',
  dataType: "script",
  success: function() { prettyPrint() },
});

var element = document.createElement('script');
element.type = 'text/javascript';
element.async = true;
element.src = '//{{ blog.disqus_shortname }}.disqus.com/embed.js';
(document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(element);

{% endblock %}

{% block footer %}
