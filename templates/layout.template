<!DOCTYPE html>
<html>
  <head>
    <meta charset='utf-8'>
    <title>{% block title %}{{ blog.name }}{% endblock %}</title>
    <link rel="shortcut icon" href="/favicon.ico">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/static/css/bootstrap.min.css" rel="stylesheet">
    <link href="/static/css/bootstrap-responsive.min.css" rel="stylesheet">
    <link href="/static/css/custom.css" rel="stylesheet">
    <link href="/static/css/tomorrow.css" rel="stylesheet">
    <link href="{{ blog.feed_url }}" type="application/rss+xml" rel="alternate" />
    {% block header %}{% endblock %}
  </head>
  <body>
  <a href="https://github.com/skhaz/nullonerror"><img style="position: absolute; top: 0; right: 0; border: 0;" src="/static/img/forkme.png" alt="Fork me on GitHub" /></a>
  <div class="row">
  <div class="container">
    <div class="masthead">
      <blockquote>
        <h1>{{ blog.name }}</h1>
        <small>{{ blog.quote }}</small>
      </blockquote>
      <div class="navbar navbar-inverse">
        <div class="navbar-inner">
        <div class="container">
        <ul class="nav">
          <li class="active"><a href="/">Home</a></li>
          <li><a href="/code">Code</a></li>
          <li><a href="/archive">Archive</a></li>
          <li><a href="/categories">Categories</a></li>
          <li><a href="/about">About</a></li>
        </ul>
        </div>
        </div>
      </div>
    </div>
  <div class="row-fluid">
  <div class="span12">
  {% block content %}
  {% endblock %}
  </div>
  </div>
  <hr>
  <div class="footer">
    <p>
      <span class="copyleft">
      &copy;
      </span>
      &nbsp;
      Copyleft 2013
    </p>
  </div>
  </div>
  <script type="text/javascript">
  // <![CDATA[
  String.prototype.format = function() {
    var str = this
    var i = 0
    var len = arguments.length
    var matches = str.match(/{}/g)
    if (!matches || matches.length !== len) { return '' }
    while (i < len) {
      value = arguments[i]
      str = str.replace(/{}/, value ? value : '')
      i++
    }

    return str
  }

  var require = {
    baseUrl: "/static/js",

    shim: {
      'jquery': {
        exports: '$'
      },

      'bootstrap': {
        deps: ['jquery']
      },

      'prettify': {
        init: function () {
          prettyPrint()
        }
      },

      'jquery.raptorize': {
        deps: ['jquery']
      }
    },

    deps: [
      'jquery.ga',
      'bootstrap',
      {% for module in modules %}
      '{{ module }}',
      {% endfor %}
    ],

    callback: function() {
      $(function() {
        $.ajax({
          type : "GET",
          url: (document.location.protocol == "https:" ? "https://ssl" : "http://www") + '.google-analytics.com/ga.js',
          dataType : "script",
          data: null,
          cache : true,
          success: function() {
            var tracker = _gat._getTracker('{{ blog.ga_tracking_code }}')
            tracker.trackPageview();
          }
        })

        {% block ready %}
        {% endblock %}
      })
    }
  }
  // ]]>
  </script>
  <script src="/static/js/require.js" type="text/javascript"></script>
  {% block footer %}
  {% endblock %}
  </body>
</html>

